{
    "openapi": "3.0.0",
    "info": {
        "title": "Tha Network | APIs",
        "version": "1.0"
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "paths": {
        "/api/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "requestBody": {
                    "description": "Your request body description",
                    "required": true,
                    "content": {
                        "application/json": {
                            "example": {
                                "email": "asd444@mailinator.com",
                                "username": "zywigodor",
                                "password": "admin!@#"
                            }
                        }
                    }
                },
                "responses": {
                    "default": {
                        "description": "Generic response",
                        "content": {
                            "application/json": {
                                "example": {
                                    "success": true,
                                    "message": "Success!",
                                    "data": [
                                        "...."
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/me": {
            "get": {
                "tags": [
                    "Secure Routes"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "default": {
                        "description": "Generic response",
                        "content": {
                            "application/json": {
                                "example": {
                                    "success": true,
                                    "message": "Success!",
                                    "data": [
                                        "...."
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
